@{
    ViewBag.Title = "Enterprise managament";

}
@model Trasys.PhotoTrack.BackEnd.Models.EnterpriseModels

<div class="row">
    <div class="col-lg-6">
        <div class="box">
            <div class="box dark">
                <header>
                    <h5>Companies list</h5>
                </header>

                <div id="div-1" class="body collapse in">

                    <table id="dataTable" class="table table-bordered table-condensed table-hover table-striped">
                        <thead>
                            <tr>
                                <th>Name</th>
                                <th></th>
                            </tr>
                        </thead>
                        @if (ViewBag.ResultsEnterpriseInformations != null)
                        {
                        <tbody>
                            @foreach (Trasys.PhotoTrack.BackEnd.Models.EnterpriseModels item in ViewBag.ResultsEnterpriseInformations)
                                {
                                <tr>
                                    <td>@item.Name</td>
                                    <td>@Html.ActionLink("Edit", "Index", new { enterpriseID = @item.EnterpriseID })</td>
                                </tr>
                                }
                        </tbody>
                        }
                    </table>
                </div>
            </div>
        </div>
    </div>
    <div class="col-lg-6">
        <div class="box">
            <div class="box dark">
                <header>
                    @if (ViewBag.IsEdit)
                    {
                        <h5>Edit @ViewBag.CompanyName company</h5>
                    }
                    else
                    {
                        <h5>Add a company </h5>
                    }
                </header>
                <div id="div-1" class="body collapse in">
                    @using (Html.BeginForm("Edit", "Enterprise", FormMethod.Post, new { @class = "form-horizontal" }))
                    {
                        <div class="form-group">
                            <label for="text1" class="control-label col-lg-4">@Html.LabelFor(p => p.Name)</label>
                            <div class="col-lg-8">
                                @Html.EditorFor(p => p.Name, new { htmlAttributes = new { @class = "form-control" } })
                            </div>
                            @Html.EditorFor(p => p.EnterpriseID)
                        </div>
                        <div class="form-actions no-margin-bottom">
                            <input type="submit" value="Validate" class="btn btn-primary">
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts
{
    <script>
        $(document).ready(
            function () {
                Metis.MetisTable();
                Metis.metisSortable();
            });
    </script>
}

