@using Trasys.PhotoTrack.BackEnd.Models

@model ApplicationUser


@{
    if (ViewBag.SiteId > 0)
    {
        ViewBag.Title = "Edit an account";
    }
    else
    {
        ViewBag.Title = "Add an account";
    }

}



<div class="row">
    <div class="col-lg-12">
        <div class="box dark">
            <header>
                <div class="icons">
                    <i class="fa fa-edit"></i>
                </div>
                <h5>Account informations</h5>
            </header>

            <div id="div-1" class="body collapse in">
                @using (Html.BeginForm("Edit", "Account", FormMethod.Post, new { @class = "form-horizontal" }))
                {
                    <div class="form-group">
                        <label for="text1" class="control-label col-lg-4">@Html.LabelFor(p => p.FirstName)</label>
                        <div class="col-lg-8">
                            @Html.EditorFor(p => p.FirstName, new { htmlAttributes = new { @class = "form-control" } })
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="text1" class="control-label col-lg-4">@Html.LabelFor(p => p.LastName)</label>
                        <div class="col-lg-8">
                            @Html.EditorFor(p => p.LastName, new { htmlAttributes = new { @class = "form-control" } })
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="text1" class="control-label col-lg-4">@Html.LabelFor(p => p.Login)</label>
                        <div class="col-lg-8">
                            @Html.EditorFor(p => p.Login, new { htmlAttributes = new { @class = "form-control" } })
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="text1" class="control-label col-lg-4">@Html.LabelFor(p => p.Password)</label>
                        <div class="col-lg-8">
                            @Html.EditorFor(p => p.Password, new { htmlAttributes = new { @class = "form-control" } })
                        </div>
                    </div>           
                    <div class="form-group">
                        <label for="text1" class="control-label col-lg-4">@Html.LabelFor(p => p.Email)</label>
                        <div class="col-lg-8">
                            @Html.EditorFor(p => p.Email, new { htmlAttributes = new { @class = "form-control" } })
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="text1" class="control-label col-lg-4">@Html.LabelFor(p => p.EnterpriseName)</label>
                        <div class="col-lg-8">
                            @{
                    List<SelectListItem> listItemsEnterprise = ViewBag.ListEnterpriseSelectItems;
                            }
                            @Html.DropDownListFor(p => p.EnterpriseStringID, @listItemsEnterprise, "-- Select Enterprise --", new { @class = "form-control chzn-select" })
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="text1" class="control-label col-lg-4">@Html.LabelFor(p => p.TypeDescription)</label>
                        @{
                    List<SelectListItem> listItems = new List<SelectListItem>();
                    listItems.Add(new SelectListItem
                         {
                             Text = "Administrator",
                             Value = "0"
                         });
                    listItems.Add(new SelectListItem
                         {
                             Text = "Contractor",
                             Value = "1"
                         });
                    listItems.Add(new SelectListItem
                         {
                             Text = "Worker",
                             Value = "2"
                         });
                        }
                        <div class="col-lg-8">
                            @Html.DropDownListFor(model => model.Type, listItems, new { @class = "form-control chzn-select" })
                        </div>

                    </div>

                    @Html.EditorFor(p => p.ProfileID);
                    <div class="form-actions no-margin-bottom">
                        <input type="submit" value="Validate" class="btn btn-primary">
                    </div>
                }
            </div>
        </div>
    </div>
</div>


@section Scripts
{
    <script>
        $(document).ready(
            function () {
                Metis.MetisTable();
                Metis.metisSortable();
            });
    </script>
}

