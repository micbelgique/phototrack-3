@using Trasys.PhotoTrack.BackEnd.Models

@{
    ViewBag.Title = "Account list";

}
@model Trasys.PhotoTrack.BackEnd.Models.ApplicationUser

<div class="row">
    <div class="col-lg-12">
        <div class="box">
            <div id="collapse4" class="body">
                <table id="dataTable" class="table table-bordered table-condensed table-hover table-striped">
                    <thead>
                        <tr>
                            <th>FullName</th>
                            <th>Email</th>
                            <th>Type</th>
                            <th>Company</th>
                            <th>Settings</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in ViewBag.ResultsUsersInformations)
                        {
                            <tr>
                                <td>@item.FullName</td>
                                <td>@item.Email</td>
                                <td>@item.TypeDescription</td>
                                <td>@item.EnterpriseName</td>
                                <td><a href="@Url.Action("Edit", "Account", new { userId = @item.ProfileID })">Show / Edit</a></td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
@section Scripts
{
    <script>
        $(document).ready(
            function () {
                Metis.MetisTable();
                Metis.metisSortable();
            });
    </script>
}

